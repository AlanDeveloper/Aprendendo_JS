<form class="form-inline">
    <div class="form-group">
        <label for="cep">CEP :</label>
        <input type="number" oninput="Cont()" maxlength="8" value="" name="cep" class="form-control" placeholder="00000-000" id="cep" autofocus>
        <span class="glyphicon glyphicon-remove" id="close_0"></span>
        <button type="submit" class="btn btn-default" id="submit"><span class="glyphicon glyphicon-search"></span></button>
    </div>
    <div class="form-group-2">
        <label for="comp">Complemento :</label>
        <input type="text" name="comp" class="form-control" placeholder="Complemento" id="comp" value="" autofocus>
        <span class="glyphicon glyphicon-remove" id="close_1"></span>
    </div>
  </button>
</form>
<div id="resultado"></div>
<div class="alert alert-danger" role="alert">Nenhum resultado encontrado, por favor verifique seu CEP.</div>
