    <table class="table">
        <tbody>
            <tr>
                <td>CEP</td>
                <td>{{cep}}</td>
            </tr>
            <tr>
                <td>Logradouro</td>
                <td>{{logradouro}}</td>
            </tr>
            <tr>
                <td>Complemento</td>
                <td>{{complemento}}</td>
            </tr>
            <tr>
                <td>Bairro</td>
                <td>{{bairro}}</td>
            </tr>
            <tr>
                <td>Localidade</td>
                <td>{{localidade}}</td>
            </tr>
            <tr>
                <td>Uf</td>
                <td>{{uf}}</td>
            </tr>
            <tr>
                <td>Unidade</td>
                <td>{{unidade}}</td>
            </tr>
            <tr>
                <td>Ibge</td>
                <td>{{ibge}}</td>
            </tr>
            <tr>
                <td>Gia</td>
                <td>{{gia}}</td>
            </tr>
        </tbody>
    </table>
</script>
<script src="js/index.js"></script>
<script>
    function Cont (){
        if (form.cep.value.length < txt.length) {
            txt = '0' + txt
            txt = txt.slice(0, btn1.maxLength);
            form.cep.value = txt;
        }
        txt = form.cep.value;
        if(form.cep.value.length === 1){
            txt = '00000000' + txt;
            txt = txt.slice(1, btn1.maxLength+2);
        } else {
            for(i=0; i < (8-form.cep.value.length); i++){
                txt = txt + '0';
            }
            if (txt.length > btn1.maxLength) {
                txt = txt.slice(1, btn1.maxLength+2);
            }
        }
        form.cep.value = txt;
    }
    let txt = '';
    const btn1 = document.querySelector('#cep');
</script>
